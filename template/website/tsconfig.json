{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "react": [
        "../node_modules/react",
        "../node_modules/@types/react"
      ],
      "styled-components": ["../node_modules/styled-components"],
      "react-dom": [
        "../node_modules/react-dom",
        "../node_modules/@types/react-dom"
      ],
      "<%=project_name%>": ["../src"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./src",
    "../src"
  ]
}
